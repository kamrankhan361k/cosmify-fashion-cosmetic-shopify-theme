<div class="widget widget-recent-articles">
   <div class="widget-title">
          <h3><span>{{ block.settings.title }}</span></h3>
        </div>
  <div class="widget-content">
    <ul>
      {% for article in blog.articles limit:10 %}
      <li class="article">
        <a class="article-image" href="{{ article.url }}">
          {{ article | img_url: '1024x' | img_tag: article.title }}
        </a>
        <p class="article-text">
          <a href="{{ article.url }}">{{ article.title }}</a> <em> {{ article.published_at | date: "%b %d, %Y" }}</em>
        </p>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>